<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Hgati\Webp\Logger\Handler" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
            <argument name="fileName" xsi:type="string">/var/log/hgati/webp.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="Hgati\Webp\Logger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="name" xsi:type="string">Hgati_Webp Logger</argument>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object">Hgati\Webp\Logger\Handler</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Hgati\Webp\Block\Adminhtml\Conversion\Tree">
        <arguments>
            <argument name="_logger" xsi:type="object">Hgati\Webp\Logger</argument>
        </arguments>
    </type>
    <type name="Hgati\Webp\Cron\Convert">
        <arguments>
            <argument name="logger" xsi:type="object">Hgati\Webp\Logger</argument>
        </arguments>
    </type>
    <type name="Hgati\Webp\Helper\Converter">
        <arguments>
            <argument name="logger" xsi:type="object">Hgati\Webp\Logger</argument>
        </arguments>
    </type>
    <type name="Hgati\Webp\Helper\Cron">
        <arguments>
            <argument name="logger" xsi:type="object">Hgati\Webp\Logger</argument>
        </arguments>
    </type>
    <type name="Hgati\Webp\Helper\Image">
        <arguments>
            <argument name="logger" xsi:type="object">Hgati\Webp\Logger</argument>
        </arguments>
    </type>
    <type name="Hgati\Webp\Helper\Process">
        <arguments>
            <argument name="logger" xsi:type="object">Hgati\Webp\Logger</argument>
        </arguments>
    </type>
    <type name="Hgati\Webp\Helper\TreeNodes">
        <arguments>
            <argument name="logger" xsi:type="object">Hgati\Webp\Logger</argument>
        </arguments>
    </type>

    <type name="Magento\Framework\Filter\DirectiveProcessor\LegacyDirective">
        <plugin name="Hgati_Webp::Filter_LegacyDirective"
                type="Hgati\Webp\Plugin\Filter\DirectiveProcessor\LegacyDirective"/>
    </type>

    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="hgati_webp_convert_command" xsi:type="object">
                    Hgati\Webp\Console\Command\Convert
                </item>
                <item name="hgati_webp_clear_command" xsi:type="object">
                    Hgati\Webp\Console\Command\Clear
                </item>
            </argument>
        </arguments>
    </type>
</config>
